<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:gravity="top"
    tools:context=".TrackingDetails" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/image_button_backto_trackit"
        android:onClick="backToHome"
        android:src="@drawable/button" />

    <TextView
        android:id="@+id/shippingCarrierLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trackingNumberLabel"
        android:text="Shipping Carrier : "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ListView
        android:id="@+id/lstText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageButton1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/carrierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shippingCarrierLabel"
        android:layout_alignBottom="@+id/shippingCarrierLabel"
        android:layout_toRightOf="@+id/trackingNumberLabel"
        android:text="#"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/trackingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/carrierName"
        android:layout_alignLeft="@+id/carrierName"
        android:text="#"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/trackingNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Tracking Number : "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="viewMap"
        android:text="ViewIt In Map" />

</RelativeLayout>